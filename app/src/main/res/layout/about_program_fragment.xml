<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="informationViewModel"
            type="viktor.braus.kplanner.menu.viewModel.InformationViewModel"
            />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context=".menu.viewModel.Information_about_program">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="106dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView21"
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:gravity="center"
                android:text="@string/zz"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/button13"
                android:layout_width="73dp"
                android:layout_height="37dp"
                android:background="#540A73"
                android:onClick="@{() -> informationViewModel.getT()}"
                android:text="@string/show_user_name"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView22"
                android:text="@{@string/bold(informationViewModel.getT)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="1097dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="fill_horizontal"
                android:text="@string/planner_1_0_2"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>