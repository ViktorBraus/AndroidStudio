<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:verticalScrollbarPosition="defaultPosition"
    tools:context=".mainPage.MainActivity"
    tools:menu="@menu/main_menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="409dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="@string/MainText"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="411dp"
        android:layout_height="69dp"
        android:layout_marginBottom="356dp"
        android:autofillHints=""
        android:gravity="center"
        android:hint="@string/WelcomeText"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="148dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="16dp"
        android:background="#673AB7"
        android:duplicateParentState="false"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:onClick="sendMessage"
        android:rotationX="20"
        android:text="@string/SendButton"
        android:textColor="#8BC34A"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#D900FF"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_message" />

    <Button
        android:id="@+id/button2"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="276dp"
        android:background="#673AB7"
        android:onClick="Exit"
        android:rotationX="20"
        android:selectAllOnFocus="false"
        android:shadowColor="#000000"
        android:text="@string/ExitButton"
        android:textColor="#8BC34A"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#D900FF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_message" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>