<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstrakciya_cvet_ugol_fon_1087"
        android:focusedByDefault="false"
        android:forceHasOverlappingRendering="false"
        android:foregroundTintMode="add"
        android:hapticFeedbackEnabled="false"
        android:orientation="vertical"
        android:overScrollMode="always"
        android:verticalScrollbarPosition="defaultPosition"
        tools:menu="@menu/main_menu"
        app:layout_constraintGuide_end="@dimen/spacing_normal">

        <TextView
            android:id="@+id/MainText"
            android:layout_width="360dp"
            android:layout_height="57dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center"
            android:text="@string/MainText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.Title" />

        <EditText
            android:id="@+id/NameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:autofillHints=""
            android:fontFamily="@font/yeseva_one"
            android:gravity="center"
            android:hint="@string/WelcomeText"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:shadowColor="#00FFFF"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/ExitButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainText"
            app:layout_constraintVertical_bias="0.162" />

        <Button
            android:id="@+id/EntranceButton"
            android:layout_width="148dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginBottom="31dp"
            android:background="#673AB7"
            android:duplicateParentState="false"
            android:fadeScrollbars="false"
            android:fontFamily="@font/yeseva_one"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:onClick="sendMessage"
            android:rotationX="20"
            android:text="@string/SendButton"
            android:textColor="#8BC34A"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#D900FF"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/ExitButton"
            android:layout_width="112dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginBottom="31dp"
            android:background="#673AB7"
            android:fontFamily="@font/yeseva_one"
            android:onClick="Exit"
            android:rotationX="20"
            android:selectAllOnFocus="false"
            android:shadowColor="#000000"
            android:text="@string/ExitButton"
            android:textColor="#8BC34A"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#D900FF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/EntranceButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>