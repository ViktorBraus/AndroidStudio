<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
        <variable
            name="listViewModel"
            type="viktor.braus.kplanner.plans.ListViewModel"/>
</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abstrakciya_cvet_ugol_fon_1087"
                android:columnCount="3"
                tools:context=".plans.ListOfPlans">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center|fill"
                    android:gravity="center"
                    android:text="@{listViewModel.showUser}"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Monday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Понеділок" />

                <TextView
                    android:id="@+id/mondayText"
                    android:text="@{listViewModel.nameEvent}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:text="@{listViewModel.timeEvent}"
                    android:id="@+id/mondayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="fill" />

                <Button
                    android:id="@+id/mondayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="fill"
                    android:background="#673AB7"
                    android:clickable="true"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Tuesday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Вівторок" />

                <TextView
                    android:id="@+id/tuesdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <TextView
                    android:id="@+id/tuesdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <Button
                    android:id="@+id/tuesdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Wednesday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Середа" />

                <TextView
                    android:id="@+id/wednesdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <TextView
                    android:id="@+id/wednesdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <Button
                    android:id="@+id/wednesdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="2"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Thursday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Четвер" />

                <TextView
                    android:id="@+id/thursdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <TextView
                    android:id="@+id/thursdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <Button
                    android:id="@+id/thursdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="2"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="9"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Friday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="П'ятниця" />

                <TextView
                    android:id="@+id/fridayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <TextView
                    android:id="@+id/fridayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <Button
                    android:id="@+id/fridayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="2"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="11"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:text="@string/Weekend"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:typeface="sans"
                    tools:text="Вихідні" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="12"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Saturday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Субота" />

                <TextView
                    android:id="@+id/saturdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="13"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <TextView
                    android:id="@+id/saturdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="13"
                    android:layout_column="1"
                    android:textColor="#90FFF5" />

                <Button
                    android:id="@+id/saturdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="13"
                    android:layout_column="2"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="14"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Sunday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Неділя" />

                <TextView
                    android:id="@+id/sundayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="15"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <TextView
                    android:id="@+id/sundayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="15"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:textColor="#90FFF5" />

                <Button
                    android:id="@+id/sundayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="15"
                    android:layout_column="2"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="@{listViewModel.planning}"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="16"
                    android:layout_column="1"
                    android:layout_gravity="center|top"
                    android:background="#673AB7"
                    android:onClick="BackWard"
                    android:text="@string/NewAction1"
                    android:textColor="#8BC34A"
                    android:textSize="18sp" />

                <!--@{() -> listViewModel.showUser}-->

            </GridLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>