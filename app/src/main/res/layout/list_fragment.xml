<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
        <variable
            name="listViewModel"
            type="viktor.braus.kplanner.plans.listOfPlans.ListViewModel"/>
         <variable
        name="plansViewModel"
        type="viktor.braus.kplanner.plans.plansCreating.PlansViewModel"/>
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abstrakciya_cvet_ugol_fon_1087"
                android:columnCount="2"
                android:duplicateParentState="false"
                android:fadingEdge="vertical"
                android:isScrollContainer="true"
                android:longClickable="false">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:text="@{listViewModel.showUser}"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Monday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Понеділок" />

                <TextView
                    android:id="@+id/mondayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@{listViewModel.MplansString}"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/mondayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:background="#673AB7"
                    android:clickable="true"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Tuesday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Вівторок" />

                <TextView
                    android:id="@+id/tuesdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{listViewModel.TplansString}"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/tuesdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Wednesday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Середа" />

                <TextView
                    android:id="@+id/wednesdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{listViewModel.WplansString}"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/wednesdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Thursday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Четвер" />

                <TextView
                    android:id="@+id/thursdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{listViewModel.ThplansString}"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/thursdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="9"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Friday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="П'ятниця" />

                <TextView
                    android:id="@+id/fridayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{listViewModel.FplansString}"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/fridayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="1"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekend"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_row="11"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center|fill"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="@string/Weekend"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:typeface="sans"
                    tools:text="Вихідні" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="12"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Saturday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Субота" />

                <TextView
                    android:id="@+id/saturdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{listViewModel.StplansString}"
                    android:layout_row="13"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/saturdayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="13"
                    android:layout_column="1"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/saturdayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="13"
                    android:layout_column="1"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="14"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:text="@string/Sunday"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:text="Неділя" />

                <TextView
                    android:id="@+id/sundayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{listViewModel.SplansString}"
                    android:layout_row="15"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/sundayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="15"
                    android:layout_column="1"
                    android:background="#673AB7"
                    android:minHeight="28dip"
                    android:onClick="Planning"
                    android:text="@string/NewAction"
                    android:textColor="#8BC34A"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="16"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center|top|end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="#673AB7"
                    android:onClick="BackWard"
                    android:text="@string/NewAction1"
                    android:textColor="#8BC34A"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="16"
                    android:layout_rowWeight="10"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#673AB7"
                    android:onClick="@{() -> listViewModel.onClear()}"
                    android:text="Видалити дані"
                    android:textColor="#8BC34A"
                    android:textSize="18sp" />

                <!--@{() -> listViewModel.showUser}-->

            </GridLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>